@model IEnumerable<ProjectModel>

    
<section class="featured-section p-3 p-lg-5">
    <div class="container">
        <h2 class="section-title font-weight-bold mb-5">Projects</h2>
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-md-6 mb-5">
                    <div class="card project-card">
                        <div class="row no-gutters">
                            <div class="col-lg-4 card-img-holder">
                                <img src="~/assets/images/project/@project.Image" class="card-img" alt="@project.Name" title="@project.Description">
                            </div>
                            <div class="col-lg-8">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        <a href="@project.Url" class="theme-link">
                                            @project.Name
                                        </a>
                                    </h5>
                                    <p class="card-text">
                                        @project.Description
                                    </p>
                                    <a href="@project.Url" class="card-text" >
                                        <small  class="text-muted">:Go To Project Page</small>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>